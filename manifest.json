{
    "name": "Pixel Perfect Design Helper",
    "description": "Pixel Perfect Design Helper: Chrome extension overlays UI image on web page for precise design alignment.",
    "version": "1.0",
    "manifest_version": 3,
    "icons": {
        "16":"icons/icon16.png",
        "48":"icons/icon48.png",
        "128":"icons/icon128.png"
    },
    "action": {
        "default_popup":"popup.html"
    },
    "permissions": ["scripting", "activeTab"],
    "background":{},
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["contentScript.js"]
        }
    ]
}