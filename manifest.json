{
    "manifest_version": 3,
    "name": "PixelPilot (Pixel Perfect Design Helper)",
    "description": "Pixel Perfect Design Helper: Chrome extension overlays UI image on web page for precise design alignment.",
    "version": "1.0",
    "action": {
        "default_icon": {
            "16":"icons/16.png",
            "48":"icons/48.png",
            "128":"icons/128.png"
        }
    },
    "permissions": ["activeTab"],
    "icons": {
        "16":"icons/16.png",
        "48":"icons/48.png",
        "128":"icons/128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "userDocumentHandle.js", 
                "template.js", 
                "config.js",
                "events.js",
                "colorAction.js",
                "index.js",
                "keyBoardShortCut.js"
            ],
            "css": [
                "popup.css"
            ]
        }
    ]
}