{
    "manifest_version": 3,
    "name": "Pixel Perfect Design Helper",
    "description": "Pixel Perfect Design Helper: Chrome extension overlays UI image on web page for precise design alignment.",
    "version": "1.0",
    "action": {
        "default_icon": {
            "16":"icons/16.png",
            "48":"icons/48.png",
            "128":"icons/128.png"
        }
    },
    "permissions": ["storage", "unlimitedStorage", "activeTab"],
    "icons": {
        "16":"icons/16.png",
        "48":"icons/48.png",
        "128":"icons/128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["vue3.js", "composable.js", "template.js", "index.js"]
        }
    ]
}